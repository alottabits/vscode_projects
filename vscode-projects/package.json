{
  "name": "vscode-projects",
  "displayName": "VSCode Projects",
  "description": "Project management and visualization for VSCode",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscode-projects.showProjects",
    "onView:vscode-projects-sidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-projects.showProjects",
        "title": "Show Projects",
        "category": "Projects"
      },
      {
        "command": "vscode-projects.createProject",
        "title": "Create Project",
        "category": "Projects"
      },
      {
        "command": "vscode-projects.createNote",
        "title": "Create Note",
        "category": "Projects"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vscode-projects",
          "title": "Projects",
          "icon": "media/projects-icon.svg"
        }
      ]
    },
    "views": {
      "vscode-projects": [
        {
          "id": "vscode-projects-sidebar",
          "name": "Projects"
        }
      ]
    },
    "configuration": {
      "title": "VSCode Projects",
      "properties": {
        "vscode-projects.projects": {
          "type": "array",
          "default": [],
          "description": "Configured projects"
        },
        "vscode-projects.archives": {
          "type": "array",
          "default": [],
          "description": "Archived projects"
        },
        "vscode-projects.preferences": {
          "type": "object",
          "default": {
            "projectSizeLimit": 1000,
            "frontmatter": {
              "quoteStrings": "PLAIN"
            },
            "locale": {
              "firstDayOfWeek": "default"
            },
            "commands": [],
            "linkBehavior": "open-editor"
          },
          "description": "User preferences for the extension"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/node": "^14.17.0"
  },
  "dependencies": {
    "dayjs": "^1.10.7",
    "fp-ts": "^2.11.0",
    "gray-matter": "^4.0.3",
    "immer": "^9.0.6",
    "uuid": "^8.3.2"
  }
}
